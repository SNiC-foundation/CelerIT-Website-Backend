{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "./src/public",
    "specVersion": 3,
    "schemes": [
      "http",
      "https"
    ],
    "basePath": "/api"
  },
  "routes": {
    "basePath": "/api",
    "routesDir": "./src",
    "middleware": "express"
  }
}
